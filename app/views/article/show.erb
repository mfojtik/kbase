<% if current_user %> 
  <p class="pull-right">
    <% if @article.user == current_user %>
      <a href="<%=url(:article, :edit, :id => @article.id)%>" class="btn btn-default btn-sm" role="button">Edit</a>
      <a href="<%=url(:article, :destroy, :id => @article.id)%>" class="btn btn-danger btn-sm" role="button">Archive</a>
    <% end %>
  </p>
<% end %>

<h2 class="clear"><%=@article.title %></h2>

<div class="content">
  <%=@article.html_body %>
</div>

<ol class="breadcrumb pull-right">
  <li><b>@<%=@article.user.login%></b> <small><%=time_ago_in_words(@article.updated_at)%> ago</small></li>
  <% @article.tags.each do |tag| %>
    <li><a href="<%=tag_url(tag.name)%>"><span class="label label-primary"><%=tag.name%></span></a></li>
  <% end %>
</ol>

